{
  "version": 2,
  "builds": [
    {
      "src": "iptv-backend/src/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "iptv-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "iptv-frontend/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/iptv-backend/src/main.py"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/iptv-frontend/index.html"
    }
  ]
}